{
  "name": "kilit",
  "module": "server/index.ts",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production bun server/index.ts",
    "dev": "NODE_ENV=development bun --watch server/index.ts",
    "build": "bun run build:landing && bun run build:dashboard",
    "build:landing": "cd www/landing && bun run build",
    "build:dashboard": "cd www/dashboard && bun run build",
    "db:generate": "npx drizzle-kit generate",
    "db:migrate": "npx drizzle-kit migrate",
    "db:push": "npx drizzle-kit push"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.0",
    "@kinde-oss/kinde-typescript-sdk": "^2.11.0",
    "@neondatabase/serverless": "^1.0.1",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.7.11",
    "maxmind": "^4.3.27",
    "zod": "^3.25.62"
  }
}
